<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="if_transaccion_transferencia_form" model="ir.ui.view">
            <field name="name">if.transaccion.form</field>
            <field name="model">if.transaccion</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Transferencia">
                    <header>
                        <button name="continuar" type="object" string="Continuar"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1 class="mt0">
                            <!-- <label string="Draft Refund" attrs="{'invisible': ['|',('state','not in',('draft',)), ('type','&lt;&gt;','out_refund')]}"/> -->
                            <field name="name" readonly="1" class="oe_inline" />
                        </h1>
                        <div class="oe_button_box" name="button_box">
                            <!-- <field name="user_emisor_id"/> -->
                            <br/>
                            <!-- Saldo<field name = "saldo_disponible"/> -->


                            <button type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                                <div class="o_form_field o_stat_info">
                                    <field name="user_emisor_id"/>
                                    <span class="o_stat_value">Saldo:<field name="saldo_disponible" widget="monetary" options="{'currency_field': 'currency_id'}"/></span>
                                    <!-- <span class="o_stat_text">Saldo</span> -->
                                </div>
                            </button>
                        </div>

                        <group>
                            <field name = "tipo_transaccion"/>
                            <field name = "login_user_char"/>
                            <field name = "valor"/>
                            
                            
                            <!-- <field name = "user_emisor_id"/> -->
                            <field name = "user_receptor_id" invisible="1"/>
                            <field name = "user_receptor_name"/>
                            <field name = "user_receptor_email"/>
                            <field name = "user_receptor_phone"/>
                        </group>
                        <group>
                            <field name = "cuenta_emisor_id"/>
                            <field name = "cuenta_recetor_id"/>
    
                        </group>
                        <!-- <group col="8"> -->
                            <field name = "movimientos_line">
                                <tree editable="bottom">
                                    <field name = "cuenta_id"/>    
                                    <field name = "entra"/>    
                                    <field name = "sale"/>    
                                </tree>
                            </field>
                            
                        <!-- </group> -->
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_if_transaccion_transferencia" model="ir.actions.act_window">
            <field name="name">Transferencia</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">if.transaccion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('user_emisor_id','=',uid),('tipo_transaccion','=','transferencia')]</field>
            <field name="context">{
                'user_emisor_id': uid,
                'default_user_emisor_id': uid,
                'default_tipo_transaccion': 'transferencia',
                }</field>
        </record>

        <!-- <record id="action_tree_view_hrz_comprobante_ingreso_herramienta_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_hrz_comprobante_ingreso_herramienta_tree"/>
            <field name="act_window_id" ref="action_if_transaccion_transferencia"/>
        </record> -->

        <record id="action_form_if_transaccion_transferencia" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="if_transaccion_transferencia_form"/>
            <field name="act_window_id" ref="action_if_transaccion_transferencia"/>
        </record>


        <menuitem id="submenu_transferencia" name="Transferencia" parent="menu_transaccion" action="action_if_transaccion_transferencia"/>
    </data>
</openerp>