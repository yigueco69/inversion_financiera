<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="if_movimiento_form" model="ir.ui.view">
            <field name="name">if.movimiento.form</field>
            <field name="model">if.movimiento</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Movimiento">
                    <group>
                        <field name = "cuenta_id"/>
                        <field name = "entra"/>
                        <field name = "sale"/>
                        <field name = "transaccion_id"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="if_movimiento_tree" model="ir.ui.view">
            <field name="name">if.movimiento.tree</field>
            <field name="model">if.movimiento</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Movimientos">
                    <field name = "cuenta_id"/>
                    <field name = "entra"/>
                    <field name = "sale"/>
                    <field name = "transaccion_id"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>